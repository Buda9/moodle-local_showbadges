<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/showbadges/db" VERSION="20200303" COMMENT="XMLDB file for Moodle local plugin 'local_showbadges'">
  <TABLES>
    <TABLE NAME="local_showbadges_progress" COMMENT="Table to store user badge progress">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="big" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="userid" TYPE="int" LENGTH="big" NOTNULL="true" SEQUENCE="false" COMMENT="User ID"/>
        <FIELD NAME="badgeid" TYPE="int" LENGTH="big" NOTNULL="true" SEQUENCE="false" COMMENT="Badge ID"/>
        <FIELD NAME="progress" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="Progress towards achievement, represented as an integer percentage"/>
        <FIELD NAME="dateearned" TYPE="int" LENGTH="big" NOTNULL="false" SEQUENCE="false" COMMENT="Unix timestamp of when the badge was earned"/>
        <FIELD NAME="dateissued" TYPE="int" LENGTH="big" NOTNULL="false" SEQUENCE="false" COMMENT="Unix timestamp of when the badge was issued"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="userid" TYPE="foreign" FIELDS="userid" REFTABLE="mdlmh_user" REFFIELDS="id"/>
        <KEY NAME="badgeid" TYPE="foreign" FIELDS="badgeid" REFTABLE="mdlmh_badge" REFFIELDS="id"/>
      </KEYS>
      <INDEXES>
        <INDEX NAME="userid-badgeid" UNIQUE="true" FIELDS="userid, badgeid"/>
      </INDEXES>
    </TABLE>
  </TABLES>
</XMLDB>
