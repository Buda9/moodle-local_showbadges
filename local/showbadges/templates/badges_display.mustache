<div id="badges-filter-sort-container">
    <input type="text" id="badge-filter" placeholder="Filter badges...">
    <select id="badge-sort">
        <option value="name">Sort by Name</option>
        <option value="description">Sort by Description</option>
    </select>
</div>
<div id="badges-container" class="badges-grid">
    {{#badges}}
    <div class="badge-item {{#earned}}earned{{/earned}}{{^earned}}unearned{{/earned}}">
        <div class="badge-image-container">
            <img src="{{imageurl}}" alt="{{name}}" class="badge-image">
        </div>
        <div class="badge-details">
            <h3 class="badge-name">{{name}}</h3>
            <p class="badge-description">{{description}}</p>
        </div>
    </div>
    {{/badges}}
</div>
